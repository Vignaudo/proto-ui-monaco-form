{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "node",
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}